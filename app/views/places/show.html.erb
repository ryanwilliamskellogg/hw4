<h1><%= @place["name"] %></h1>

<h2>My Entries</h2>

<% if session["user_id"] %>
  <% if @entries.any? %>
    <% for entry in @entries %>
      <h3><%= entry["title"] %></h3>
      <h4><%= entry["occurred_on"] %></h4>
      <p><%= entry["description"] %></p>
    <% end %>
  <% else %>
    <p>You haven't added any entries for this place yet.</p>
  <% end %>

  <p>
    <a href="/entries/new?place_id=<%= @place["id"] %>">New Entry</a>
  </p>
<% else %>
  <p>Please <a href="/login">log in</a> to view or add your entries.</p>
<% end %>

<p>
  <a href="/places">Back to Places</a>
</p>
