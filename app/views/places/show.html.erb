<h1><%= @place["name"] %></h1>

<% if session["user_id"] %>
  <p>
    <a class="btn btn-primary mb-4" href="/entries/new?place_id=<%= @place["id"] %>">New Entry</a>
  </p>

  <% if @entries.any? %>
    <div class="row">
      <% @entries.each do |entry| %>
        <div class="col-lg-4 col-md-6 mb-4">
          <div class="h-100 p-2">
            <h4><%= entry["title"] %></h4>
            <p class="text-muted"><%= entry["occurred_on"] %></p>

            <% if entry.uploaded_image.attached? %>
              <%= image_tag entry.uploaded_image, class: "img-fluid rounded mb-2" %>
            <% end %>

            <p><%= entry["description"] %></p>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p>You haven't added any entries for this place yet.</p>
  <% end %>
<% else %>
  <p>Please <a href="/login">log in</a> to view or add your entries.</p>
<% end %>

<p>
  <a href="/places">Back to Places</a>
</p>
